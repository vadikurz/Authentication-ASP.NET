@using WebApplication.Utils.Constants
@model SignInViewModel
@{ var query = new Dictionary<string, string>
   {
       [ApplicationCookies.ReturnUrlParameter] = Context.Request.Query[ApplicationCookies.ReturnUrlParameter]
   };
}

    <div class="container bg-light col-3 border rounded my-5 ">
        <div class="col">
                <div class="row my-3 px-3">
                    <label class="text-center h1">Sign in</label>
                </div>
                <form asp-controller="Account" asp-action="SignIn" method="post" asp-all-route-data=@query>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row  my-3 px-3">
                        <div class="col align-items-center">
                            <div class="row">
                                <label asp-for="UserName" class="form-label"></label>
                            </div>
                            <div class="row">
                                <input asp-for="UserName" class="form-control"/>
                            </div>
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="row  my-3 px-3">
                        <div class="col align-items-center">
                            <div class="row">
                                <label asp-for="Password" class="form-label"></label>
                            </div>
                            <div class="row">
                                <input asp-for="Password" class="form-control"/>
                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="row my-3 px-2">
                        <div class="d-inline">
                            <input asp-for="IsPersistent" class="form-check-input"/>
                            <label asp-for="IsPersistent" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="row my-3 px-2">
                        <div class="d-inline col-sm">
                            <button type="submit" class="btn btn-primary"> Sign in</button>
                            <a asp-controller="Account" asp-action="SignUp" asp-all-route-data=@query class="btn btn-secondary mx-2">Sign up</a>
                        </div>
                    </div>
                </form>
            </div>
    </div>
